@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> @Model.Name</h2>
<ul>
    <li>Genre:  @Model.Genre.Name</li>
    <li>Release Date: @Convert.ToString(string.Format("{0:d MMM yyyy}", Model.ReleaseDate))</li>
    <li>Date Added: @Convert.ToString(string.Format("{0:d MMM yyyy}", Model.DateAdded))</li>
    <li>Date Added: @Model.NumberInStock</li>

</ul>
