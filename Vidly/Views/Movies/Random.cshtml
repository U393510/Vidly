@model Vidly.ViewModels.RandomMovieViewModel
@*Commented => @model Vidly.Models.Movie*@
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    //Use below technique to Render attribute dynamically 
    //Like we are passing style class based on customer counts 
    var classname = Model.Customers.Count >= 1 ? "popular" : null;
}
<h2 class="@classname">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>
                @customer.Name
            </li>
        }
    </ul>
}


